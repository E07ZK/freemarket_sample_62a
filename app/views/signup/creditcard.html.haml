.single__container
  %header.single__header
    %h1.logo
      %a.logo__link{:href => "#"}
        %img.logo__image{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2651893653"}/
    %nav.signup-bar
      %ol.clearfix.progress-bar
        %li.active
          会員情報
          .progress-bar__status.progress-bar__status--first
        %li.active
          電話番号認証
          .progress-bar__status
        %li.active
          お届け先住所入力
          .progress-bar__status
        %li.active.active-last
          支払い方法
          .progress-bar__status
        %li
          完了
          .progress-bar__status.progress-bar__status--last
  %main.single__main
    %section.l-single__container
      %h2.l-single__head.registration 支払い方法
      %form.l-single__inner.registration-form{action: "#"}
        %input{name: "#", type: "hidden", value: "#"}
        .l-single__content
          .form__group
            %label{for: "payment_card_no"} カード番号
            %span.form__require 必須
            %input#payment_card_no.input-default{maxlength: "19", placeholder: "半角数字のみ", type: "text", value: ""}/
            %ul.signup__card-list
              %li
                = image_tag "cards/visa.svg", size: "49x20", alt: ""
              %li
                = image_tag "cards/master-card.svg", size: "34x20", alt: ""
              %li
                = image_tag "cards/saison-card.svg", size: "30x20", alt: ""
              %li
                = image_tag "cards/jcb.svg", size: "32x20", alt: ""
              %li
                = image_tag "cards/american-express.svg", size: "21x20", alt: ""
              %li
                = image_tag "cards/dinersclub.svg", size: "32x20", alt: ""
              %li
                = image_tag "cards/discover.svg", size: "32x20", alt: ""
          .form__group.signup__form--expire
            %label{for: "payment_card_expire"} 有効期限
            %span.form__require 必須
            .select-wrap.half
              %select#payment_card_expire__mm.select-default
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %i.icon-arrow-bottom
              %span 月
            .select-wrap.half
              %select#payment_card_expire__mm.select-default
                %option{value: "19"} 19
                %option{value: "20"} 20
                %option{value: "21"} 21
                %option{value: "22"} 22
                %option{value: "23"} 23
                %option{value: "24"} 24
                %option{value: "25"} 25
                %option{value: "26"} 26
                %option{value: "27"} 27
                %option{value: "28"} 28
                %option{value: "29"} 29
              %i.icon-arrow-bottom
              %span 年
          .form__group
            %label{for: "payment_card_security_code"} セキュリティコード
            %span.form__require 必須
            %input#payment_card_security_code.input-default{name: "#", placeholder: "カード背面4桁もしくは3桁の番号", type: "number", value: ""}/
            %p.text-right
              %a{href: "#", target: "_blank"}
                カード背面の番号とは?
                %i.icon-arrow-right
          .form__group
          %button.btn-default.btn-red{type: "submit"} 次へ進む
  = render partial: "iFooter"