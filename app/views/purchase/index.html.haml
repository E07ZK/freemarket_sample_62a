.single__container
  %header.single__header
    %h1
      = link_to root_path do
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?210491352', alt: 'mercari'
  %main.single__main
    %section.l-single__container.buy-item-container
      %h2.single-head 購入内容の確認
      %section.buy-content.buy-item
        .buy-content-inner
          %h3.buy-content-inner__image
            -# = image_tag {@product.images}
            = image_tag 'https://static.mercdn.net/thumb/photos/m21842421124_1.jpg?1572179132', class: 'lazyload'
          %p.buy-content-inner__name.bold #{@product.name}
          -# %form.buy_form{:action => "https://www.mercari.com/jp/transaction/buy/done/m21842421124/", :method => "POST", :novalidate => "novalidate"}
          = form_with url: pay_purchase_index_path, class: :buy_form, local: true do |f|
            %p.buy_form__price-ja.bold
              = "¥" + @product.price.to_s
              %span.buy-price-ja.item-shipping-fee
                = @product.shipping_cost
            %ul.buy_form__accordion.not-have
              %li.buy-accordion-parent
                .buy-accordion-toggle
                  ポイントはありません
            %ul.buy_form--price
              %li.buy_form--price__row.buy-you-pay.bold
                .buy_form--price__cell 支払い金額
                .buy_form--price__cell
                  = "¥" + @product.price.to_s
            = f.hidden_field :product_id, value: @product.id
            -# = f.hidden_field :product_price, value: @product.price
            -# %p.has-error-text 配送先と支払い方法の入力を完了してください。
            -# %button.btn-default.btn-red.bold{:disabled => "disabled", :type => "submit"} 購入する
            -# %input#user_info_is_not_complete{:type => "hidden"}/
            = f.submit "購入する", class: "btn-default btn-red bold"
      %section.buy-content.buy-user-info
        .buy-content-inner
          %h3 配送先
          %address.buy-user-info-text
            = "〒" + @address.postal_code
            %br/
            = @address.prefecture
            = @address.city_name
            = @address.block_number
            = @address.building_name if @address.building_name
            %br/
            = @address.last_name
            = @address.first_name
          %p.buy-user-info-text
          -# (発送元・お届け先住所入力)画面へ 'https://www.mercari.com/jp/transaction/address/m21842421124/'
          = link_to '#', class: 'buy-user-info-fix' do
            %span 変更する
            = fa_icon "chevron-right"
      %section.buy-content.buy-user-info{"data-buy" => "pay-method"}
        .buy-content-inner
          %h3 支払い方法
          %p.buy-user-info-text
            = "**** **** ****" + @defaulte_card_infomation.last4
            %br/
            - exp_month = @defaulte_card_infomation.exp_month.to_s
            - exp_year = @defaulte_card_infomation.exp_year.to_s.slice(2,3)
            = exp_month + "/" + exp_year
            %figure
              = image_tag @card_img, size: "40x15", alt: ""
          -# カード登録画面へ(支払い方法)'https://www.mercari.com/jp/transaction/card/m21842421124/'
          = link_to '#', class: 'buy-user-info-fix' do
            %span 変更する
            = fa_icon "chevron-right"
  = render "products/iFooter"