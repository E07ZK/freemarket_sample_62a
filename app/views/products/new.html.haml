.single__container
  %header.single__header
    %h1
      %a{href: "#"}
        %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3580354878"}/
  %main.single__main
    %section.l-single__container.buy-item-container
      #sell-container
        %div{"data-reactroot" => ""}
          .sell-container-inner
            %h2.single-head 商品の情報を入力
            = form_with model: @product, url: products_path, method: :post, local: true do |f|
              .sell-upload
                %h3.sell-upload__head
                  出品画像
                  %span.form-require 必須
                %p 最大10枚までアップロードできます
                .sell-dropbox-container.clearfix.state-image-number-10
                  .sell-upload-items-container
                    .sell-upload-items.have-item-0
                      %ul
                  .sell-upload-drop-box.have-item-0
                    %input.sell-upload-drop-file{:multiple => "multiple", :name => "image1", :style => "display: none;", :type => "file"}/
                    -# = f.file_field :images
                    %pre.visible-pc
                      :preserve
                        ドラッグアンドドロップ
                        またはクリックしてファイルをアップロード
              .sell-content
                .form-group
                  %label
                    商品名
                    %span.form-group__require 必須
                  %div
                    = f.text_field :name, class: "input-default", placeholder: "商品名（必須 40文字まで)"
                .form-group
                  %label
                    商品の説明
                    %span.form-group__require 必須
                  = f.text_area :description, class: "textarea-default", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"
              .sell-content.clearfix
                %h3.sell-sub-head 商品の詳細
                .sell-form-box
                  .form-group
                    %label
                      カテゴリー
                      %span.form-group__require 必須
                    %div
                      .select-wrap
                        = fa_icon "chevron-down"
                        = f.collection_select(:category_id, @categories, :id, :name, {prompt: "---"}, {class: "select-default"})
                  .form-group
                    %label
                      サイズ
                      %span.form-group__require 必須
                    %div
                      .select-wrap
                        = fa_icon "chevron-down"
                        = f.collection_select(:size_id, @sizes, :id, :name, {prompt: "---"}, {class: "select-default"})
                  .form-group
                    %label
                      商品の状態
                      %span.form-group__require 必須
                    .select-wrap
                      = fa_icon "chevron-down"
                      = f.collection_select :condition, Condition.all, :id, :name, {prompt: "---"}, {class: "select-default"}
              .sell-content.clearfix
                %h3.sell-sub-head 配送について
                %a.form-question{:href => "/jp/help_center/article/68/", :target => "_blank"} ?
                .sell-form-box
                  .form-group
                    %label
                      配送料の負担
                      %span.form-group__require 必須
                    .select-wrap
                      = fa_icon "chevron-down"
                      = f.collection_select :shipping_cost, Shipping_cost.all, :id, :name, {prompt: "---"}, {class: "select-default"}
                      -# %select.select-default
                      -#   %option{:value => ""} ---
                      -#   %option{:value => "2"} 送料込み(出品者負担)
                      -#   %option{:value => "1"} 着払い(購入者負担)
                  .form-group
                    %label
                      発送元の地域
                      / /react-text
                      %span.form-group__require 必須
                    .select-wrap
                      = fa_icon "chevron-down"
                      = f.collection_select :shipping_area, Prefecture.all, :id, :name, {prompt: "---"}, {class: "select-default"}
                    / react-empty: 86
                  .form-group
                    %label
                      / react-text: 89
                      発送までの日数
                      / /react-text
                      %span.form-group__require 必須
                    .select-wrap
                      = fa_icon "chevron-down"
                      = f.collection_select :shipping_date, Shipping_date.all, :id, :name, {prompt: "---"}, {class: "select-default"}
                      -# %select.select-default
                      -#   %option{:value => ""} ---
                      -#   %option{:value => "1"} 1~2日で発送
                      -#   %option{:value => "2"} 2~3日で発送
                      -#   %option{:value => "3"} 4~7日で発送
                    / react-empty: 95
              .sell-content.clearfix
                %h3.sell-sub-head 販売価格(300〜9,999,999)
                %a.form-question{:href => "/jp/help_center/article/64/", :target => "_blank"} ?
                .sell-form-box
                  %ul.sell-price
                    %li.form-group
                      .clearfix
                        %label.l-left
                          / react-text: 104
                          価格
                          / /react-text
                          %span.form-group__require 必須
                        .l-right.sell-price-input
                          / react-text: 107
                          ¥
                          / /react-text
                          %div
                            = f.number_field :price, class: "input-default", min:300, max:9999999, placeholder: "例）300", value: ""
                            -# %input.input-default{:placeholder => "例）300", :value => ""}/
                      / react-empty: 110
                    %li.clearfix
                      .l-left
                        / react-text: 199
                        販売手数料 (10%)
                        / /react-text
                      .l-right -
                    %li.clearfix.bold
                      .l-left 販売利益
                      .l-right -
              .modal{:role => "dialog", :tabindex => "-1"}
                .modal-inner
              .sell-content.sell-btn-box
                %div
                  %p
                    %a{:href => "/jp/help_center/getting_started/prohibited_items/", :target => "_blank"} 禁止されている出品
                    / react-text: 123
                    、
                    / /react-text
                    %a{:href => "/jp/help_center/getting_started/prohibited_conduct/", :target => "_blank"} 行為
                    / react-text: 125
                    を必ずご確認ください。
                    / /react-text
                  %p
                    / react-text: 127
                    またブランド品でシリアルナンバー等がある場合はご記載ください。
                    / /react-text
                    %a{:href => "/jp/help_center/getting_started/counterfeit_goods/", :target => "_blank"} 偽ブランドの販売
                    / react-text: 129
                    は犯罪であり処罰される可能性があります。
                    / /react-text
                  %p
                    / react-text: 131
                    また、出品をもちまして
                    / /react-text
                    %a{:href => "/jp/seller_terms/"} 加盟店規約
                    / react-text: 133
                    に同意したことになります。
                    / /react-text
                %button.btn-default.btn-red{:type => "submit"}
                  / react-text: 135
                  出品する
                  / /react-text
                %a.btn-default.btn-gray もどる
                / react-empty: 137
            .overlay
  = render partial: "iFooter"