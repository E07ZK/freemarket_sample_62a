.single__container
  %header.single__header
    %h1
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3580354878", alt: "mercari"
  %main.single__main
    %section.l-single__container
      %h2.l-single__head.registration 新規会員登録
      .l-single__inner.registration-form
        .l-single__content
          = link_to "メールアドレスで登録する", registration_signup_index_path, class: "btn-default btn-mail"
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.icon-facebook
            = link_to "Facebookで登録する", user_facebook_omniauth_authorize_path, method: :post
          %button#google-login.btn-default.btn-sns.btn-sns-google
            = link_to "Googleで登録する", user_google_oauth2_omniauth_authorize_path, method: :post
  = render partial: "signup/iFooter"