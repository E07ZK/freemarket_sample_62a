    //ここから出品者情報
    %table.item__product__table
      %tbody
        %tr
          %th.item__product__table__th 出品者
          %td.item__product__table__td
            %a{:href => "#"} 藪田狼
            %div
              .item-user-ratings__smile
                = fa_icon "smile-o"
                %span 1
              .item-user-ratings__meh
                = fa_icon "meh-o"
                %span 0
              .item-user-ratings__frown
                = fa_icon "frown-o"
                %span 0
        %tr
          %th.item__product__table__th カテゴリー
          %td.item__product__table__td
            %a{:href => "https://www.mercari.com/jp/category/2/"}
              %div メンズ
            %a{:href => "https://www.mercari.com/jp/category/38/"}
              .item__product__table__category
                %i.icon-arrow-right
                小物
            %a{:href => "https://www.mercari.com/jp/category/384/"}
              .item__product__table__category__sub-category
                %i.icon-arrow-right
                長財布
        %tr
          %th.item__product__table__th ブランド
          %td.item__product__table__td
            %a{:href => "https://www.mercari.com/jp/brand/1326/"}
              %div
                ルイ ヴィトン
        %tr
          %th.item__product__table__th 商品の状態
          %td.item__product__table__td やや傷や汚れあり
